<div class="max-w-md mx-auto mt-10 bg-white p-8 rounded-lg shadow">
  <div class="text-center">
    <h2 class="text-2xl font-bold">Sign Up Here!</h2>
  </div>
  <form id="signup-form" class="mt-4">
    <div class="mb-4">
      <label for="username-signup" class="block text-sm font-semibold text-gray-700">Username:</label>
      <input type="text" id="username-signup" class="mt-1 p-2 w-full border rounded-md" />
    </div>
    <div class="mb-6">
      <label for="password-signup" class="block text-sm font-semibold text-gray-700">Password:</label>
      <input type="password" id="password-signup" class="mt-1 p-2 w-full border rounded-md" />
    </div>
    <button type="submit" id="signup-btn" class="w-full bg-blue-500 text-white p-2 rounded-md hover:bg-blue-700">Signup!</button>
    <a href="/login" class="block text-center mt-4 text-blue-500 hover:text-blue-700">Already have an account? Login</a>
  </form>
</div>


<script src="/js/signup.js"></script>